{
  "type": "object",
  "properties": {
    "overall_assessment": {
      "type": "string",
      "description": "Brief overall assessment of plan quality"
    },
    "score": {
      "type": "number",
      "description": "Plan quality score from 1-10"
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor"]
          },
          "category": {
            "type": "string",
            "enum": ["completeness", "correctness", "clarity"]
          },
          "description": {
            "type": "string"
          },
          "suggestion": {
            "type": "string"
          },
          "affected_section": {
            "type": "string"
          }
        },
        "required": ["severity", "category", "description", "suggestion", "affected_section"],
        "additionalProperties": false
      }
    },
    "missing_considerations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "strengths": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["overall_assessment", "score", "issues", "missing_considerations", "strengths"],
  "additionalProperties": false
}
