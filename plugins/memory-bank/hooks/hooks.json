{
  "description": "Inject compact memory bank summary at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/inject-context.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
